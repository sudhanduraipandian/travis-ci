#!/usr/bin/env ruby

$: << 'lib'

require 'benchmark'
require 'stackprof'
require 'yaml'
require 'travis/yaml'
require 'validate/local'
require 'validate/record/message'

configs = Record::Request.find([584594, 657002]).pluck(:config)
configs = configs.map { |config| LessYAML.load(config) }
ActiveRecord::Base.clear_active_connections!

Travis::Yaml.expanded
Travis::Yaml.keys

count = 100

GC.disable
Benchmark.bm do |x|
  x.report do
    StackProf.run(mode: :wall, interval: 100, out: 'tmp/stackprof-cpu-myapp.dump') do
      count.times do |ix|
        print "\r\e[2K#{ix}"
        configs.each do |config|
          Travis::Yaml.apply(config).serialize
        end
      end
      print "\r\e[2K"
    end
  end
end
